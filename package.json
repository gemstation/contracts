{
  "name": "@gemstation/contracts",
  "version": "1.0.0",
  "description": "Standardized Diamond Standard contracts. Used by gemforge.",
  "files": [
    "src",
    "README.md",
    "package.json",
    "package-lock.json",
    "CHANGELOG.md",
    "LICENSE.md"
  ],
  "license": "MIT",
  "scripts": {
    "prepare": "husky install && npx husky add .husky/commit-msg 'npx commitlint --edit $1'",
